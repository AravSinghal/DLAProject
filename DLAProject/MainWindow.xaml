<Window x:Class="DLAProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DLAProject"
        mc:Ignorable="d"
        Title="Diffusion Limited Aggregation" Height="768" Width="1366">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="727" VerticalAlignment="Top" Width="681"/>
        <Slider Maximum="5000" TickPlacement="BottomRight" TickFrequency="100" IsSnapToTickEnabled="True" x:Name="particles_slider" HorizontalAlignment="Left" Margin="943,50,0,0" VerticalAlignment="Top" Height="25" Width="337"/>
        <Label x:Name="NParticles_Label" Content="Number of Particles" HorizontalAlignment="Left" Margin="815,49,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.019,-0.647" Width="123"/>
        <TextBox Text="{Binding ElementName=particles_slider, Path=Value, UpdateSourceTrigger=PropertyChanged}" x:Name="particle_val" HorizontalAlignment="Left" Height="23" Margin="1285,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Right" Width="40"/>
        <Label x:Name="AggSticky_Label" Content="Aggregate Stickiness" HorizontalAlignment="Left" Margin="815,116,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.019,-0.647" Width="123"/>
        <Slider Minimum="0.01" Maximum="1.0" TickPlacement="BottomRight" TickFrequency="0.01" IsSnapToTickEnabled="True" x:Name="stickiness_slider" HorizontalAlignment="Left" Margin="943,116,0,0" VerticalAlignment="Top" Height="25" Width="337"/>
        <TextBox Text="{Binding Value, ElementName=stickiness_slider, UpdateSourceTrigger=PropertyChanged}" x:Name="sticky_val" HorizontalAlignment="Left" Height="23" Margin="1285,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Right" Width="40" RenderTransformOrigin="0.496,3.33"/>
        <Button x:Name="generate_button" Content="Generate" HorizontalAlignment="Left" Margin="815,200,0,0" VerticalAlignment="Top" Width="75" Click="GenerateButtonClick"/>
        <Button x:Name="pause_button" Content="Pause" HorizontalAlignment="Left" Margin="911,200,0,0" VerticalAlignment="Top" Width="75" Click="PauseButtonClick"/>
    </Grid>
</Window>
